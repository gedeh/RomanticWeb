<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <DefineConstants>$(DefineConstants);NETSTANDARD16</DefineConstants>
    <AssemblyName>RomanticWeb.Tests</AssemblyName>
    <PackageId>RomanticWeb.Tests</PackageId>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="JsonLd\**\*" />
    <EmbeddedResource Include="Linq\Queries\Ask.rq;Linq\Queries\SelectAll.rq;Linq\Queries\SelectByName.rq;Linq\Queries\SelectCountDistinct.rq;Linq\Queries\SelectEntityComplexSubquery.rq;Linq\Queries\SelectFriendByIdSubstring.rq;Linq\Queries\SelectFriendByName.rq;Linq\Queries\SelectFriendByNameWithSubquery.rq;TestGraphs\AssociatedInstances.trig;TestGraphs\BasicDatatypes.trig;TestGraphs\BlankNodes.trig;TestGraphs\Collections.trig;TestGraphs\ComplexDataset.nq;TestGraphs\ComplexRdfLists.trig;TestGraphs\Dictionary.trig;TestGraphs\EntityWithManyTypes.trig;TestGraphs\InheritedPropertyGraph.trig;TestGraphs\InheritingEntities.trig;TestGraphs\LargeDataset.nq;TestGraphs\LooseCollections.trig;TestGraphs\MixedCollections.trig;TestGraphs\RdfLists.trig;TestGraphs\SharedBlankNodes.trig;TestGraphs\SuperTripleOperations.trig;TestGraphs\TriplesInNamedGraphs.trig;TestGraphs\TriplesInUnmappedGraphs.trig;TestGraphs\TriplesWithLiteralSubjects.trig;TestGraphs\TypedInstance.trig;config.ttl;TurtleGraphConversionTests.ttl" Exclude="bin\**;obj\**;**\*.xproj;packages\**;@(EmbeddedResource)" />
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="config.ttl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../RomanticWeb.Contracts/RomanticWeb.Contracts.csproj" />
    <ProjectReference Include="../../RomanticWeb.Mapping.Fluent/RomanticWeb.Mapping.Fluent.csproj" />
    <ProjectReference Include="../../RomanticWeb.dotNetRDF/RomanticWeb.dotNetRDF.csproj" />
    <ProjectReference Include="../RomanticWeb.TestEntities/RomanticWeb.TestEntities.csproj" />
    <ProjectReference Include="../RomanticWeb.TestEntities.FluentMappings/RomanticWeb.TestEntities.FluentMappings.csproj" />
    <ProjectReference Include="../RomanticWeb.TestEntities.MixedMappings/RomanticWeb.TestEntities.MixedMappings.csproj" />
    <ProjectReference Include="../../RomanticWeb/RomanticWeb.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="4.17.0" />
    <PackageReference Include="NUnit" Version="3.13.1" />
    <PackageReference Include="Moq" Version="4.6.38-alpha" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.17.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.9.1" />
    <PackageReference Include="System.Runtime.InteropServices.RuntimeInformation" Version="4.3.0" />
  </ItemGroup>

</Project>
